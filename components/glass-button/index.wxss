/* components/glass-button/index.wxss */

.glass-btn {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
  box-sizing: border-box;
  min-width: 176rpx;
  min-height: 88rpx;
  padding: 16rpx 48rpx;
  overflow: hidden;
}

/* 禁用状态 */
.glass-btn[disabled] {
  opacity: 0.5;
  pointer-events: none;
}

/* 主要按钮 */
.glass-btn-primary {
  background: #2563EB;
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(37, 99, 235, 0.3);
}

.glass-btn-primary-hover {
  background: #1D4ED8;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.2);
  transform: scale(0.98);
}

/* 次要按钮（玻璃态） */
.glass-btn-secondary {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  color: #2563EB;
}

.glass-btn-secondary-hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

/* CTA 按钮 */
.glass-btn-cta {
  background: #F97316;
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(249, 115, 22, 0.3);
}

.glass-btn-cta-hover {
  background: #EA580C;
  box-shadow: 0 2rpx 8rpx rgba(249, 115, 22, 0.2);
  transform: scale(0.98);
}

/* 文字按钮 */
.glass-btn-text {
  background: transparent;
  color: #2563EB;
  box-shadow: none;
  padding: 16rpx 24rpx;
  min-width: auto;
}

.glass-btn-text-hover {
  background: rgba(37, 99, 235, 0.1);
}

/* 按钮尺寸 */
.glass-btn-sm {
  min-height: 64rpx;
  padding: 12rpx 32rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
}

.glass-btn-md {
  min-height: 88rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  border-radius: 24rpx;
}

.glass-btn-lg {
  min-height: 104rpx;
  padding: 24rpx 64rpx;
  font-size: 32rpx;
  border-radius: 32rpx;
}

/* 按钮内容 */
.glass-btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

/* 按钮图标 */
.glass-btn-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.glass-btn-icon image {
  width: 100%;
  height: 100%;
}

/* 加载状态 */
.glass-btn.is-loading {
  pointer-events: none;
}

.glass-btn-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.glass-btn-secondary .loading-spinner {
  border-color: rgba(37, 99, 235, 0.2);
  border-top-color: #2563EB;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: inherit;
  font-weight: inherit;
}

/* 光效 */
.glass-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.glass-btn:active::before {
  left: 100%;
}

/* 减少动画模式 */
@media (prefers-reduced-motion: reduce) {
  .glass-btn,
  .loading-spinner {
    transition: none;
    animation: none;
  }
}
