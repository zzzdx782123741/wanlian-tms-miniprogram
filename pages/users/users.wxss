/**
 * 用户管理页面样式
 */

.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 顶部标题栏 */
.header {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  padding: 40rpx 32rpx 60rpx;
  border-radius: 0 0 50% 50% / 0 0 80rpx 80rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 搜索和筛选 */
.search-bar {
  padding: 0 32rpx;
  margin-top: -40rpx;
}

.search-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.filter-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3748;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.filter-picker.half {
  flex: 1;
}

.arrow {
  font-size: 20rpx;
  color: #A0AEC0;
}

.search-input {
  flex: 1;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.search-btn {
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(250, 112, 154, 0.3);
}

.search-btn::after {
  border: none;
}

/* 列表容器 */
.list-container {
  padding: 0 32rpx;
}

/* 用户卡片 */
.user-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 用户头部 */
.user-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #E2E8F0;
}

.user-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #EDF2F7;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 24rpx;
  color: #718096;
}

.user-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.user-status.status-normal {
  background: #D1FAE5;
  color: #065F46;
}

.user-status.status-pending_audit {
  background: #FEF3C7;
  color: #92400E;
}

.user-status.status-suspended {
  background: #FED7D7;
  color: #742A2A;
}

/* 用户元信息 */
.user-meta {
  display: flex;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-label {
  font-size: 22rpx;
  color: #718096;
}

.meta-value {
  font-size: 26rpx;
  color: #2D3748;
  font-weight: 500;
}

.meta-value.role-DRIVER {
  color: #667eea;
}

.meta-value.role-FLEET_MANAGER {
  color: #f093fb;
}

.meta-value.role-STORE_TECHNICIAN {
  color: #10B981;
}

.meta-value.role-PLATFORM_OPERATOR {
  color: #fa709a;
}

/* 操作按钮行 */
.action-row {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  padding: 16rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: #fa709a;
  color: #fff;
}

.action-btn.success {
  background: #10B981;
  color: #fff;
}

.action-btn.warning {
  background: #F59E0B;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #A0AEC0;
}
