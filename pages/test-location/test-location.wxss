/* pages/test-location/test-location.wxss - 位置功能测试页面样式 */

.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  color: #fff;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 位置信息卡片 */
.location-card {
  background: #fff;
  margin: 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.location-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.location-info {
  flex: 1;
}

.location-label {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 12rpx;
}

.location-address {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.location-coords {
  font-size: 24rpx;
  color: #A0AEC0;
  font-family: monospace;
}

/* 测试按钮 */
.test-buttons {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.test-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.test-btn::after {
  border: none;
}

.test-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.test-btn.success {
  background: linear-gradient(135deg, #48BB78 0%, #38A169 100%);
  color: #fff;
}

.test-btn.info {
  background: linear-gradient(135deg, #4299E1 0%, #3182CE 100%);
  color: #fff;
}

.test-btn.warning {
  background: linear-gradient(135deg, #ED8936 0%, #DD6B20 100%);
  color: #fff;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

/* 配置信息 */
.config-card {
  background: #fff;
  margin: 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.config-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 24rpx;
}

.config-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.config-item:last-child {
  border-bottom: none;
}

.config-label {
  font-size: 26rpx;
  color: #718096;
  width: 180rpx;
}

.config-value {
  flex: 1;
  font-size: 26rpx;
  color: #2D3748;
  font-family: monospace;
  word-break: break-all;
}

.config-value.success {
  color: #48BB78;
  font-weight: 600;
}

.config-value.error {
  color: #F56565;
  font-weight: 600;
}

/* 测试日志 */
.log-card {
  background: #fff;
  margin: 32rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.log-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 24rpx;
}

.log-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.log-item {
  background: #F7FAFC;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.log-time {
  font-size: 22rpx;
  color: #A0AEC0;
  margin-bottom: 8rpx;
}

.log-content {
  padding-left: 16rpx;
}

.log-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.log-message {
  font-size: 24rpx;
  color: #4A5568;
  white-space: pre-wrap;
  line-height: 1.6;
}
