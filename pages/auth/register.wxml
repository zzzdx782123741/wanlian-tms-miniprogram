<!--pages/auth/register.wxml-->
<view class="register-container">
  <!-- 顶部标题 -->
  <view class="header-section">
    <text class="header-title">注册账号</text>
    <text class="header-subtitle">加入万联TMS智慧物流</text>
  </view>

  <!-- 注册表单 -->
  <view class="form-section glass-card">
    <view class="form-item">
      <text class="label">用户名</text>
      <input
        class="input-field"
        placeholder="请输入用户名"
        value="{{username}}"
        bindinput="onUsernameInput"
      />
    </view>

    <view class="form-item">
      <text class="label">手机号</text>
      <input
        class="input-field"
        type="number"
        placeholder="请输入手机号"
        maxlength="11"
        value="{{phone}}"
        bindinput="onPhoneInput"
      />
    </view>

    <view class="form-item">
      <text class="label">角色</text>
      <picker class="picker" mode="selector" range="{{roleList}}" range-key="label" value="{{roleIndex}}" bindchange="onRoleChange">
        <view class="picker-text">
          {{roleList[roleIndex].label}}
        </view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">密码</text>
      <input
        class="input-field"
        type="password"
        placeholder="请输入密码（至少6位）"
        value="{{password}}"
        bindinput="onPasswordInput"
      />
    </view>

    <view class="form-item">
      <text class="label">确认密码</text>
      <input
        class="input-field"
        type="password"
        placeholder="请再次输入密码"
        value="{{confirmPassword}}"
        bindinput="onConfirmPasswordInput"
      />
    </view>

    <button class="register-btn glass-btn-cta" bindtap="handleRegister">
      注册
    </button>

    <view class="login-link">
      <text>已有账号？</text>
      <text class="link-text" bindtap="goToLogin">立即登录</text>
    </view>
  </view>
</view>
