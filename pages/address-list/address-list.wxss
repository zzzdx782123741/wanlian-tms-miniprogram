/* pages/address-list/address-list.wxss - 服务地址列表样式 */

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 顶部标题栏 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 32rpx;
  color: white;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 内容区 */
.content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

/* 空状态 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #606266;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #909399;
}

/* 地址列表 */
.address-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.address-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.address-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.address-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.address-phone {
  font-size: 28rpx;
  color: #606266;
}

.address-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.delete-btn {
  background-color: #fef0f0;
  color: #f56c6c;
}

.edit-btn {
  background-color: #ecf5ff;
  color: #409eff;
}

.address-detail {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.address-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.address-text {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.6;
}

.address-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.default-tag {
  background-color: #ecf5ff;
  color: #409eff;
}

.remark-tag {
  background-color: #f4f4f5;
  color: #909399;
}

/* 底部按钮 */
.footer {
  padding: 24rpx;
  background-color: white;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.add-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.add-btn::after {
  border: none;
}

.add-icon {
  font-size: 40rpx;
  line-height: 1;
}

.add-text {
  line-height: 1;
}
