/**
 * 报修申请页面样式 - 优化大字体和易用性
 */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 顶部标题栏 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 60rpx;
  border-radius: 0 0 50% 50% / 0 0 80rpx 80rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单容器 */
.form-container {
  padding: 0 32rpx;
  margin-top: -40rpx;
}

/* 表单组 */
.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.form-label {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #EF4444;
  margin-right: 4rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.label-hint {
  font-size: 24rpx;
  font-weight: 400;
  color: #F6AD55;
  margin-left: 8rpx;
}

/* 大卡片选择按钮 */
.big-select-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 160rpx;
  padding: 32rpx;
  background: #F7FAFC;
  border-radius: 24rpx;
  border: 4rpx solid #E2E8F0;
  transition: all 0.3s;
}

.big-select-btn.selected {
  background: #EBF8FF;
  border-color: #4299E1;
}

/* 紧凑选择按钮 */
.compact-select-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 88rpx;
  padding: 20rpx 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  border: 3rpx solid #E2E8F0;
  transition: all 0.3s;
}

.compact-select-btn:active {
  background: #EBF8FF;
  border-color: #4299E1;
}

.placeholder-icon {
  font-size: 72rpx;
  margin-right: 24rpx;
}

.placeholder-icon-small {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.placeholder-text {
  font-size: 36rpx;
  color: #A0AEC0;
  font-weight: 500;
}

.compact-select-text {
  font-size: 30rpx;
  color: #A0AEC0;
  font-weight: 500;
}

.compact-select-content {
  flex: 1;
}

.compact-select-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3748;
}

.select-content {
  flex: 1;
}

.select-main {
  font-size: 40rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.select-sub {
  font-size: 30rpx;
  color: #718096;
}

.select-arrow {
  font-size: 64rpx;
  color: #CBD5E0;
  font-weight: 300;
  margin-left: 16rpx;
}

.compact-select-arrow {
  font-size: 40rpx;
  color: #CBD5E0;
  font-weight: 300;
}

/* 日期时间选择按钮 - 合并版 */
.datetime-select-btn-full {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 36rpx;
  background: #F7FAFC;
  border-radius: 24rpx;
  border: 4rpx solid #E2E8F0;
  min-height: 180rpx;
  transition: all 0.3s;
}

.datetime-select-btn-full:active {
  background: #EBF8FF;
  border-color: #4299E1;
}

.datetime-select-icon {
  font-size: 72rpx;
  margin-right: 20rpx;
}

.datetime-select-content-full {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.datetime-display-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.datetime-label-small {
  font-size: 28rpx;
  color: #718096;
  min-width: 80rpx;
}

.datetime-value-large {
  font-size: 38rpx;
  color: #2D3748;
  font-weight: 700;
  flex: 1;
}

.datetime-select-arrow {
  font-size: 64rpx;
  color: #CBD5E0;
  font-weight: 300;
  margin-left: 16rpx;
}

/* 日期时间选择器 - 统一按钮 */
.datetime-unified-btn {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #F7FAFC;
  border-radius: 24rpx;
  border: 4rpx solid #E2E8F0;
  min-height: 140rpx;
}

.datetime-unified-btn:active {
  background: #EBF8FF;
  border-color: #4299E1;
}

.datetime-icon {
  font-size: 64rpx;
  margin-right: 20rpx;
}

.datetime-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.datetime-label {
  font-size: 28rpx;
  color: #718096;
}

.datetime-value {
  font-size: 36rpx;
  color: #4299E1;
  font-weight: 700;
}

/* 日期时间选择器 - 紧凑并排按钮 */
.datetime-compact-row {
  display: flex;
  gap: 16rpx;
}

.datetime-compact-picker {
  flex: 1;
}

.datetime-btn {
  flex: 1;
  min-height: 88rpx;
}

/* 故障标签 - 紧凑三行布局 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tags-compact {
  max-height: 180rpx;
  overflow: hidden;
}

.tag-item {
  padding: 16rpx 24rpx;
  background: #F7FAFC;
  border: 3rpx solid #E2E8F0;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #4A5568;
  font-weight: 500;
  transition: all 0.2s;
}

.tag-item.active {
  background: #4299E1;
  border-color: #4299E1;
  color: #fff;
  font-weight: 700;
}

/* 语音输入按钮 */
.voice-input-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #48BB78 0%, #38A169 100%);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.textarea-field::placeholder {
  color: #A0AEC0;
  font-size: 28rpx;
}

.textarea-field-small {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3748;
  line-height: 1.6;
  box-sizing: border-box;
  border: 3rpx solid #E2E8F0;
}

.textarea-field-small::placeholder {
  color: #A0AEC0;
  font-size: 26rpx;
}

.char-count {
  text-align: right;
  font-size: 26rpx;
  color: #A0AEC0;
  margin-top: 12rpx;
}

/* 输入框 */
.input-field {
  width: 100%;
  padding: 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3748;
  border: 3rpx solid #E2E8F0;
  box-sizing: border-box;
}

.input-field::placeholder {
  color: #A0AEC0;
  font-size: 26rpx;
}

/* 里程输入框区域 */
.mileage-input-row {
  display: flex;
  align-items: stretch;
  gap: 16rpx;
}

.mileage-input-field {
  flex: 1;
  min-width: 0;
  padding: 28rpx 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  font-size: 36rpx;
  color: #2D3748;
  border: 3rpx solid #E2E8F0;
  box-sizing: border-box;
  font-weight: 600;
  letter-spacing: 2rpx;
  min-height: 100rpx;
}

.mileage-input-field::placeholder {
  color: #A0AEC0;
  font-size: 28rpx;
  font-weight: 400;
}

.mileage-photo-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #48BB78 0%, #38A169 100%);
  border-radius: 16rpx;
  flex-shrink: 0;
}

.mileage-photo-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.mileage-photo-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

.mileage-photos-preview {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.mileage-photo-item {
  width: 180rpx;
  height: 180rpx;
}

/* 媒体上传 */
.media-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.media-upload-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  border: none;
}

.media-upload-icon {
  font-size: 56rpx;
  margin-right: 16rpx;
  color: #fff;
}

.media-upload-text {
  font-size: 36rpx;
  color: #fff;
  font-weight: 700;
}

.media-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  width: 100%;
}

.media-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.uploaded-media {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(239, 68, 68, 0.95);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  z-index: 10;
}

.upload-hint {
  width: 100%;
  font-size: 28rpx;
  color: #F56565;
  margin-top: 16rpx;
  padding: 16rpx;
  background: #FFF5F5;
  border-radius: 12rpx;
  border-left: 6rpx solid #F56565;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  border-radius: 24rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.4);
  margin-top: 40rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.5);
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* 提示信息 */
.tips {
  background: #FFFBEB;
  border-left: 6rpx solid #F59E0B;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-top: 32rpx;
}

.tip-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #92400E;
  margin-bottom: 16rpx;
}

.tip-item {
  font-size: 28rpx;
  color: #78350F;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

/* 弹窗遮罩 */
.picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.picker-popup {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx;
  border-bottom: 2rpx solid #E2E8F0;
}

.picker-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2D3748;
}

.picker-close {
  font-size: 48rpx;
  color: #718096;
  padding: 8rpx;
}

.picker-list {
  flex: 1;
  max-height: 60vh;
}

.picker-item {
  display: flex;
  align-items: center;
  padding: 36rpx;
  border-bottom: 2rpx solid #F7FAFC;
  position: relative;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item.active {
  background: #EBF8FF;
}

.picker-item-main {
  font-size: 38rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
  flex: 1;
}

.picker-item-sub {
  font-size: 28rpx;
  color: #718096;
  flex: 1;
}

.picker-check {
  font-size: 48rpx;
  color: #4299E1;
  font-weight: bold;
  margin-left: 16rpx;
}

/* 门店选择弹窗特殊样式 */
.store-picker-item {
  display: block;
  padding: 0;
  margin-bottom: 16rpx;
}

.store-picker-item > view {
  background: #FFFFFF;
  border: 3rpx solid #E2E8F0;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
}

.store-picker-item.active > view {
  background: #EBF8FF;
  border-color: #4299E1;
}

.store-picker-content {
  width: 100%;
}

.store-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.store-picker-details {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 2rpx solid #F7FAFC;
}

.store-detail-row {
  display: flex;
  align-items: center;
}

.store-detail-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.store-detail-text {
  font-size: 26rpx;
  color: #718096;
  flex: 1;
}

.store-detail-text.phone-tap {
  color: #4299E1;
  text-decoration: underline;
}

/* 日期时间选择器弹窗 */
.datetime-picker-popup {
  max-height: 80vh;
}

.datetime-section {
  padding: 20rpx 24rpx;
  border-bottom: 2rpx solid #E2E8F0;
}

.datetime-section:last-child {
  border-bottom: none;
}

.datetime-section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 16rpx;
}

.date-picker-large {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  border: 3rpx solid #E2E8F0;
}

.date-picker-large-text {
  font-size: 36rpx;
  color: #4299E1;
  font-weight: 600;
}

.date-picker-arrow {
  font-size: 48rpx;
  color: #CBD5E0;
}

/* 日期选择触发器 */
.date-picker-trigger {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.date-picker-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #4299E1;
}

.next-step-btn {
  margin: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
  border-radius: 24rpx;
  border: none;
}

.next-step-btn::after {
  border: none;
}

/* 时间选择网格 - 改为单列滚动样式 */
.time-slots-grid {
  height: 600rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.time-slot-item {
  width: 100%;
  padding: 28rpx 32rpx;
  text-align: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  border: 3rpx solid #E2E8F0;
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3748;
  transition: all 0.2s;
  box-sizing: border-box;
}

.time-slot-item.active {
  background: linear-gradient(135deg, #4299E1 0%, #3182CE 100%);
  border-color: #3182CE;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(66, 153, 225, 0.35);
}

/* 媒体上传选择弹窗 */
.media-picker-popup {
  width: 100%;
  background: transparent;
  display: flex;
  align-items: flex-end;
}

.media-picker-content {
  width: 100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 48rpx 36rpx;
  animation: slideUp 0.3s ease-out;
}

.media-picker-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  text-align: center;
  margin-bottom: 40rpx;
}

.media-picker-buttons {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.media-picker-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
}

.media-picker-big-icon {
  font-size: 88rpx;
  margin-bottom: 16rpx;
}

.media-picker-btn-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}

.media-picker-cancel {
  text-align: center;
  padding: 28rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  font-size: 34rpx;
  color: #718096;
  font-weight: 600;
}

/* 服务地址卡片 */
.service-location-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #EBF8FF 0%, #E6FFFA 100%);
  border-radius: 16rpx;
  border: 3rpx solid #BEE3F8;
}

.location-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.location-content {
  flex: 1;
  min-width: 0;
}

.location-address {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-tip {
  font-size: 24rpx;
  color: #718096;
}

.location-change-btn {
  padding: 12rpx 24rpx;
  background: #4299E1;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 24rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 车队提示卡片 */
.fleet-tip-card {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: #FFFBEB;
  border-radius: 16rpx;
  border: 3rpx solid #FBD38D;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #92400E;
  margin-bottom: 8rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #78350F;
  line-height: 1.6;
}

/* 门店距离标签 */
.store-distance {
  margin-left: 12rpx;
  padding: 4rpx 12rpx;
  background: #48BB78;
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 12rpx;
}

/* 服务地址选择弹窗 */
.location-picker-popup {
  width: 100%;
  max-height: 70vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

.location-picker-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.location-picker-option {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #EBF8FF 0%, #E6FFFA 100%);
  border-radius: 24rpx;
  border: 3rpx solid #BEE3F8;
  margin-bottom: 24rpx;
}

.location-option-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
}

.location-option-text {
  flex: 1;
}

.location-option-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 6rpx;
}

.location-option-desc {
  font-size: 26rpx;
  color: #718096;
}

.location-picker-current {
  padding: 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
}

.location-current-label {
  font-size: 26rpx;
  color: #718096;
  margin-bottom: 12rpx;
}

.location-current-value {
  font-size: 28rpx;
  color: #2D3748;
  line-height: 1.6;
}

/* 语音输入提示 */
.voice-input-hint {
  display: flex;
  align-items: center;
