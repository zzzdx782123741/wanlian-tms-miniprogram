/**
 * 报修申请页面样式
 */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 顶部标题栏 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 60rpx;
  border-radius: 0 0 50% 50% / 0 0 80rpx 80rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单容器 */
.form-container {
  padding: 0 32rpx;
  margin-top: -40rpx;
}

/* 表单组 */
.form-group {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #EF4444;
  margin-right: 4rpx;
}

/* 选择器 */
.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3748;
}

.picker-view.placeholder {
  color: #A0AEC0;
}

.picker-arrow {
  font-size: 40rpx;
  color: #CBD5E0;
  font-weight: 300;
}

/* 日期时间选择器行 */
.datetime-row {
  display: flex;
  gap: 16rpx;
}

.datetime-row .picker-view {
  flex: 1;
}

.datetime-row .picker-view.small {
  padding: 20rpx;
  font-size: 26rpx;
}

/* 文本域 */
.textarea-field {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3748;
  line-height: 1.6;
  box-sizing: border-box;
}

.textarea-field::placeholder {
  color: #A0AEC0;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #A0AEC0;
  margin-top: 12rpx;
}

/* 图片上传 */
.image-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F7FAFC;
  border: 2rpx dashed #CBD5E0;
  border-radius: 16rpx;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #718096;
  margin-bottom: 4rpx;
}

.upload-hint {
  font-size: 20rpx;
  color: #A0AEC0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(239, 68, 68, 0.9);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  margin-top: 32rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* 提示信息 */
.tips {
  background: #FFFBEB;
  border-left: 4rpx solid #F59E0B;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.tip-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #92400E;
  margin-bottom: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #78350F;
  line-height: 1.8;
  margin-bottom: 8rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}
