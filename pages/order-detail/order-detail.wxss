/**
 * 订单详情页面样式
 */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 160rpx;
}

/* 加载容器 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 32rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #E2E8F0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #A0AEC0;
}

/* 订单详情容器 */
.order-detail {
  padding-bottom: 40rpx;
}

/* 状态卡片 */
.status-card {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
}

.status-pending {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
}

.status-received,
.status-quoted,
.status-approved,
.status-completed {
  background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
}

.status-confirmed {
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
}

.status-icon {
  font-size: 80rpx;
  margin-right: 24rpx;
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 8rpx;
}

.status-hint {
  font-size: 24rpx;
  color: #64748B;
}

/* 时间线 */
.timeline {
  background: #fff;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  padding-left: 48rpx;
  position: relative;
}

.timeline-item:not(:last-child) {
  padding-bottom: 32rpx;
}

.timeline-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 24rpx;
  bottom: -8rpx;
  width: 2rpx;
  background: #E2E8F0;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 4rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #E2E8F0;
  border: 4rpx solid #F5F7FA;
}

.timeline-dot.active {
  background: #667eea;
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 4rpx;
}

.timeline-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #E2E8F0;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #718096;
}

.info-value {
  font-size: 28rpx;
  color: #2D3748;
  font-weight: 500;
}

/* 车辆信息 */
.vehicle-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.vehicle-main {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.vehicle-plate {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.vehicle-model {
  font-size: 26rpx;
  color: #718096;
}

.arrow-icon {
  font-size: 48rpx;
  color: #CBD5E0;
  font-weight: 300;
}

/* 车队信息 */
.fleet-info {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #E2E8F0;
  font-size: 26rpx;
  color: #718096;
}

.fleet-label {
  color: #A0AEC0;
}

.fleet-name {
  color: #4A5568;
  font-weight: 600;
}

/* 故障描述 */
.fault-content {
  font-size: 28rpx;
  color: #4A5568;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

.fault-images,
.quote-images,
.completion-images,
.log-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.fault-image,
.quote-image,
.completion-image,
.log-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 门店信息 */
.store-info {
  margin-bottom: 20rpx;
}

.store-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 16rpx;
}

.store-detail {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #4A5568;
  margin-bottom: 12rpx;
}

.detail-icon {
  margin-right: 8rpx;
}

.contact-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.contact-btn::after {
  border: none;
}

/* 报价信息 */
.quote-items {
  margin-bottom: 20rpx;
}

.quote-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.quote-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: #4A5568;
}

.item-price {
  font-size: 26rpx;
  color: #718096;
}

.quote-total {
  display: flex;
  justify-content: flex-end;
  align-items: baseline;
  padding: 20rpx 0;
  border-top: 2rpx solid #E2E8F0;
  margin-top: 8rpx;
}

.total-label {
  font-size: 26rpx;
  color: #718096;
  margin-right: 8rpx;
}

.total-value {
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 维修日志 */
.log-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.log-item {
  padding: 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.log-operator {
  font-size: 26rpx;
  font-weight: 600;
  color: #2D3748;
}

.log-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

.log-content {
  font-size: 26rpx;
  color: #4A5568;
  line-height: 1.6;
}

/* 完工信息 */
.completion-content {
  font-size: 28rpx;
  color: #4A5568;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

/* 确认信息 */
.confirm-info {
  margin-top: 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
  border-radius: 12rpx;
  border: 2rpx solid #10B981;
}

.confirm-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.confirm-icon {
  font-size: 28rpx;
  color: #10B981;
  margin-right: 8rpx;
  font-weight: bold;
}

.confirm-label {
  font-size: 26rpx;
  color: #065F46;
}

.confirm-value {
  font-size: 26rpx;
  color: #10B981;
  font-weight: 600;
  margin-left: 8rpx;
}

.confirm-time {
  font-size: 24rpx;
  color: #065F46;
  padding-left: 36rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.action-btn.approve {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.action-btn.reject {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.3);
}

.action-btn.confirm {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.3);
}

.action-btn.review {
  background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

/* 已确认提示 */
.confirmed-notice {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
  border: 2rpx solid #10B981;
}

.notice-icon {
  font-size: 32rpx;
  color: #10B981;
  margin-right: 12rpx;
  font-weight: bold;
}

.notice-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #065F46;
}

/* 接车检查信息 */
.check-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.check-diagnosis {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: #FFFBEB;
  border-left: 4rpx solid #F59E0B;
  border-radius: 8rpx;
}

.diagnosis-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #92400E;
}

.diagnosis-text {
  font-size: 28rpx;
  color: #4A5568;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

.check-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
}

.check-photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 维修报价项目 */
.quote-items {
  margin-bottom: 16rpx;
}

.quote-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.quote-item:last-child {
  border-bottom: none;
}

.item-name {
  flex: 1;
  font-size: 28rpx;
  color: #2D3748;
  font-weight: 500;
  margin-right: 16rpx;
}

.item-price {
  font-size: 26rpx;
  color: #718096;
  margin-right: 16rpx;
}

.item-subtotal {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
  min-width: 100rpx;
  text-align: right;
}

/* 维修日志 */
.log-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.log-item {
  padding: 20rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.log-operator {
  font-size: 26rpx;
  font-weight: 600;
  color: #2D3748;
}

.log-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

.log-content {
  font-size: 28rpx;
  color: #4A5568;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

.log-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.log-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 拒绝原因卡片 */
.reject-card {
  background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
  border: 2rpx solid #FCA5A5;
}

.reject-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.reject-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.reject-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #991B1B;
}

.reject-reason {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.reject-reason-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #7F1D1D;
}

.reject-reason-text {
  font-size: 28rpx;
  color: #450A0A;
  line-height: 1.6;
}

.reject-tip {
  font-size: 24rpx;
  color: #7F1D1D;
  text-align: center;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
}

/* 重新提交按钮 */
.action-btn.resubmit {
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

/* 查看拒绝原因按钮 */
.action-btn.info {
  background: linear-gradient(135deg, #6B7280 0%, #4B5563 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(107, 114, 128, 0.3);
}

/* 保养订单信息 */
.maint-info-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.maint-info-row:last-child {
  border-bottom: none;
}

.maint-label {
  font-size: 26rpx;
  color: #718096;
  font-weight: 600;
  width: 180rpx;
  flex-shrink: 0;
}

.maint-value {
  font-size: 28rpx;
  color: #2D3748;
  flex: 1;
  word-break: break-all;
}

.maint-value.price {
  font-size: 32rpx;
  font-weight: 700;
  color: #F56C6C;
}

.maint-approval {
  margin-top: 20rpx;
  padding-top: 20rpx;
}

.approval-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #E2E8F0, transparent);
  margin-bottom: 20rpx;
}

/* 提交人信息 */
.reporter-detail {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reporter-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.reporter-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #2D3748;
}

.reporter-role {
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.reporter-contact {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.contact-icon {
  font-size: 28rpx;
}

.contact-phone {
  font-size: 28rpx;
  color: #667eea;
}

/* 车队审批区域 */
.fleet-approve-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.approve-tip {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #FFFBEB;
  border-left: 4rpx solid #F59E0B;
  border-radius: 12rpx;
  margin-bottom: 8rpx;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #92400E;
  line-height: 1.5;
}

.selected-store-tip {
  margin-bottom: 8rpx;
}

.selected-store-content {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #F0FDF4;
  border: 1rpx solid #86EFAC;
  border-radius: 12rpx;
  transition: background-color 0.2s;
}

.selected-store-tip:active .selected-store-content {
  background: #DCFCE7;
}

.store-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.selected-store-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.store-name {
  font-size: 28rpx;
  color: #166534;
  font-weight: 600;
}

.store-hint {
  font-size: 24rpx;
  color: #166534;
  opacity: 0.7;
}

.store-change-icon {
  font-size: 36rpx;
  color: #166534;
  opacity: 0.5;
}

.action-btn.select-store {
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

/* 我的位置信息 */
.service-location-info {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #F0F9FF;
  border-left: 4rpx solid #3B82F6;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.location-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.location-text {
  font-size: 28rpx;
  color: #0369A1;
  line-height: 1.5;
  flex: 1;
  word-break: break-all;
}

/* 门店选择弹窗 */
.store-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.store-picker-popup {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.store-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.store-picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

.store-picker-close {
  font-size: 48rpx;
  color: #9CA3AF;
  line-height: 1;
}

.store-picker-list {
  flex: 1;
  overflow-y: auto;
  max-height: 60vh;
}

.store-picker-item {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #F3F4F6;
  transition: background-color 0.2s;
}

.store-picker-item:active {
  background: #F9FAFB;
}

.store-picker-item.active {
  background: #EFF6FF;
}

.store-item-main {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.store-item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.store-item-name {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #1F2937;
}

.store-item-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #3B82F6;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.store-item-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
}

.store-item-distance {
  color: #10B981;
  font-weight: 500;
}

.store-item-rating {
  color: #F59E0B;
  font-weight: 500;
}

.store-item-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.store-item-detail {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #6B7280;
}

.detail-icon {
  font-size: 28rpx;
}

.detail-text {
  flex: 1;
  color: #6B7280;
}

.store-picker-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #E5E7EB;
  background: #fff;
}

.store-picker-cancel,
.store-picker-confirm {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.store-picker-cancel {
  background: #F3F4F6;
  color: #6B7280;
}

.store-picker-confirm {
  background: #3B82F6;
  color: #fff;
}

.store-picker-confirm[disabled] {
  background: #9CA3AF;
  color: #fff;
}


/* 门店详情弹窗 */
.store-detail-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1100;
  display: flex;
  align-items: flex-end;
}

.store-detail-popup {
  width: 100%;
  max-height: 85vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

.store-detail-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.store-detail-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  padding-right: 16rpx;
}

.store-detail-close {
  font-size: 48rpx;
  color: #9CA3AF;
  line-height: 1;
  flex-shrink: 0;
}

.store-detail-content {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx 32rpx;
}

/* 评分卡片 */
.detail-rating-card {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.rating-overview {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.rating-score {
  font-size: 72rpx;
  font-weight: 700;
  color: #92400E;
  line-height: 1;
}

.rating-stars {
  display: flex;
  gap: 8rpx;
}

.rating-stars .star {
  font-size: 32rpx;
  color: #F59E0B;
}

.rating-count {
  font-size: 26rpx;
  color: #92400E;
}

/* 详情区块 */
.detail-section {
  margin-bottom: 32rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.detail-info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-info-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
}

.info-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.5;
}

/* 评价列表 */
.review-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.review-item {
  padding: 24rpx;
  background: #F9FAFB;
  border-radius: 12rpx;
}

.review-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.review-author {
  font-size: 28rpx;
  font-weight: 500;
  color: #1F2937;
}

.review-rating {
  display: flex;
  gap: 4rpx;
}

.review-star {
  font-size: 24rpx;
  color: #F59E0B;
}

.review-comment {
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.review-time {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 无评价提示 */
.no-reviews {
  text-align: center;
  padding: 64rpx 32rpx;
}

.no-reviews-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 16rpx;
}

.no-reviews-text {
  font-size: 28rpx;
  color: #4B5563;
  display: block;
  margin-bottom: 8rpx;
}

.no-reviews-hint {
  font-size: 24rpx;
  color: #9CA3AF;
  display: block;
}

/* 底部操作 */
.store-detail-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #E5E7EB;
  background: #fff;
}

.detail-close-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #F3F4F6;
  color: #1F2937;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 门店项操作区 */
.store-item-actions {
  padding: 12rpx 32rpx 12rpx 0;
  display: flex;
  justify-content: flex-end;
}

.store-detail-btn {
  padding: 8rpx 24rpx;
  background: transparent;
  color: #3B82F6;
  border: 1rpx solid #3B82F6;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 1.6;
}

.store-detail-btn::after {
  border: none;
}

.store-item-location {
  color: #6B7280;
  font-size: 26rpx;
}

