/**
 * 订单详情页面样式
 */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 160rpx;
}

/* 加载容器 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 32rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #E2E8F0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #A0AEC0;
}

/* 订单详情容器 */
.order-detail {
  padding-bottom: 40rpx;
}

/* 状态卡片 */
.status-card {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
}

.status-pending {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
}

.status-received,
.status-quoted,
.status-approved,
.status-completed {
  background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
}

.status-confirmed {
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
}

.status-icon {
  font-size: 80rpx;
  margin-right: 24rpx;
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 8rpx;
}

.status-hint {
  font-size: 24rpx;
  color: #64748B;
}

/* 时间线 */
.timeline {
  background: #fff;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  padding-left: 48rpx;
  position: relative;
}

.timeline-item:not(:last-child) {
  padding-bottom: 32rpx;
}

.timeline-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: 10rpx;
  top: 24rpx;
  bottom: -8rpx;
  width: 2rpx;
  background: #E2E8F0;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 4rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #E2E8F0;
  border: 4rpx solid #F5F7FA;
}

.timeline-dot.active {
  background: #667eea;
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 4rpx;
}

.timeline-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #E2E8F0;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-label {
  font-size: 26rpx;
  color: #718096;
}

.info-value {
  font-size: 28rpx;
  color: #2D3748;
  font-weight: 500;
}

/* 车辆信息 */
.vehicle-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.vehicle-main {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.vehicle-plate {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.vehicle-model {
  font-size: 26rpx;
  color: #718096;
}

.arrow-icon {
  font-size: 48rpx;
  color: #CBD5E0;
  font-weight: 300;
}

/* 故障描述 */
.fault-content {
  font-size: 28rpx;
  color: #4A5568;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

.fault-images,
.quote-images,
.completion-images,
.log-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.fault-image,
.quote-image,
.completion-image,
.log-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

/* 门店信息 */
.store-info {
  margin-bottom: 20rpx;
}

.store-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 16rpx;
}

.store-detail {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #4A5568;
  margin-bottom: 12rpx;
}

.detail-icon {
  margin-right: 8rpx;
}

.contact-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.contact-btn::after {
  border: none;
}

/* 报价信息 */
.quote-items {
  margin-bottom: 20rpx;
}

.quote-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.quote-item:last-child {
  border-bottom: none;
}

.item-name {
  font-size: 28rpx;
  color: #4A5568;
}

.item-price {
  font-size: 26rpx;
  color: #718096;
}

.quote-total {
  display: flex;
  justify-content: flex-end;
  align-items: baseline;
  padding: 20rpx 0;
  border-top: 2rpx solid #E2E8F0;
  margin-top: 8rpx;
}

.total-label {
  font-size: 26rpx;
  color: #718096;
  margin-right: 8rpx;
}

.total-value {
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 维修日志 */
.log-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.log-item {
  padding: 24rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.log-operator {
  font-size: 26rpx;
  font-weight: 600;
  color: #2D3748;
}

.log-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

.log-content {
  font-size: 26rpx;
  color: #4A5568;
  line-height: 1.6;
}

/* 完工信息 */
.completion-content {
  font-size: 28rpx;
  color: #4A5568;
  line-height: 1.8;
  margin-bottom: 20rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.action-btn.approve {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.action-btn.reject {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.3);
}

.action-btn.confirm {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.3);
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}
