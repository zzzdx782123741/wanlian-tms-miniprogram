/**
 * 我的订单页面样式（门店技师）
 */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 顶部标题栏 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx 60rpx;
  border-radius: 0 0 50% 50% / 0 0 80rpx 80rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: #fff;
  margin: -40rpx 32rpx 24rpx;
  padding: 12rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.1);
  position: relative;
  z-index: 1;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 12rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.tab-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #718096;
}

.tab-item.active .tab-text {
  color: #fff;
}

/* 订单列表 */
.order-list {
  padding: 0 32rpx;
}

/* 订单卡片 */
.order-card {
  position: relative;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.order-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 订单状态标签 */
.order-status {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-received {
  background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
  color: #1E40AF;
}

.status-approved {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  color: #92400E;
}

/* 新状态样式 */
.status-pending_assessment {
  background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
  color: #1E40AF;
}

.status-awaiting_approval {
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  color: #92400E;
}

.status-in_repair {
  background: linear-gradient(135deg, #D1FAE5 0%, #A7F3D0 100%);
  color: #065F46;
}

.status-awaiting_addon_approval {
  background: linear-gradient(135deg, #FEE2E2 0%, #FECACA 100%);
  color: #991B1B;
}

.status-completed {
  background: linear-gradient(135deg, #E0E7FF 0%, #C7D2FE 100%);
  color: #3730A3;
}

.status-rejected {
  background: linear-gradient(135deg, #F3F4F6 0%, #E5E7EB 100%);
  color: #6B7280;
}

.status-refunded {
  background: linear-gradient(135deg, #F3F4F6 0%, #E5E7EB 100%);
  color: #6B7280;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-right: 100rpx;
}

.order-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #2D3748;
}

.order-time {
  font-size: 22rpx;
  color: #A0AEC0;
}

/* 车辆信息 */
.order-vehicle {
  display: flex;
  align-items: center;
  background: #F7FAFC;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.vehicle-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.vehicle-info {
  flex: 1;
}

.vehicle-plate {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 4rpx;
}

.vehicle-model {
  font-size: 24rpx;
  color: #718096;
}

/* 故障描述 */
.order-fault {
  background: #FFFBEB;
  border-left: 4rpx solid #F59E0B;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
}

/* 报价信息 */
.order-quote {
  background: #F0FDF4;
  border-left: 4rpx solid #22C55E;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.quote-label {
  font-size: 24rpx;
  color: #166534;
  font-weight: 600;
  margin-right: 8rpx;
}

.quote-price {
  font-size: 32rpx;
  color: #DC2626;
  font-weight: 700;
}

.fault-label {
  font-size: 24rpx;
  color: #92400E;
  font-weight: 600;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.fault-text {
  font-size: 26rpx;
  color: #78350F;
  line-height: 1.6;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 进度提示 */
.order-progress-hint {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #DBEAFE 0%, #BFDBFE 100%);
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}

.hint-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.hint-text {
  flex: 1;
  font-size: 26rpx;
  color: #1E40AF;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #718096;
  font-weight: 600;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #E2E8F0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 26rpx;
  color: #A0AEC0;
}
