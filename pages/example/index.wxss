/**
 * 示例页样式 - 玻璃态设计系统
 * Example Page Styles - Glassmorphism Design System
 */

page {
  background: linear-gradient(180deg, #F0F4FF 0%, #F8FAFC 100%);
  padding-bottom: 100rpx;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", sans-serif;
  min-height: 100vh;
}

.page-container {
  padding: 48rpx;
}

/* 标题 */
.title {
  margin-top: 48rpx;
  margin-bottom: 16rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #1E293B;
  letter-spacing: -0.02em;
}

/* 说明文字 */
.info {
  margin-top: 16rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #475569;
  line-height: 1.75;
}

.top_tip {
  font-size: 28rpx;
  color: #475569;
  margin-top: 24rpx;
  line-height: 1.6;
}

/* 按钮样式 */
.btn-full {
  height: 88rpx;
  border-radius: 24rpx;
  line-height: 88rpx;
  color: #FFFFFF;
  background: #2563EB;
  text-align: center;
  margin-top: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(37, 99, 235, 0.3);
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
}

.btn-full:active {
  background: #1D4ED8;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.2);
  transform: scale(0.98);
}

.button_clear {
  width: 300rpx;
  text-align: center;
  margin: 24rpx auto 0;
  height: 80rpx;
  color: #2563EB;
  border-radius: 20rpx;
  line-height: 80rpx;
  background: rgba(37, 99, 235, 0.1);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(37, 99, 235, 0.2);
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.button_clear:active {
  background: rgba(37, 99, 235, 0.2);
}

/* 代码展示区 - 玻璃态卡片 */
.code_zone {
  background: #0E190E;
  color: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  position: relative;
  margin-bottom: 32rpx;
  margin-top: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  font-family: 'Monaco', 'Menlo', 'Courier New', monospace;
  font-size: 24rpx;
  line-height: 1.8;
  overflow-x: auto;
}

/* 内容展示框 */
.box_text {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15px);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  text-align: center;
  padding: 120rpx 0;
  margin-top: 24rpx;
  color: #64748B;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(37, 99, 235, 0.08);
}

/* 图片 */
.img {
  width: 100%;
  border-radius: 20rpx;
  margin: 24rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.step-img {
  margin-top: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.12);
}

.code_img {
  width: 360rpx;
  height: 360rpx;
  border-radius: 16rpx;
}

/* 步骤标题 */
.step-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  margin: 32rpx 0 16rpx;
  display: flex;
  align-items: center;
}

.step-left {
  color: #FFFFFF;
  background: linear-gradient(135deg, #2563EB, #3B82F6);
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 12rpx;
}

.step-right {
  color: #2563EB;
  background: rgba(37, 99, 235, 0.1);
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
  margin-right: 12rpx;
  font-weight: 600;
}

/* 步骤说明 */
.step-text {
  font-size: 28rpx;
  line-height: 1.75;
  padding: 16rpx 0;
  color: #475569;
}

/* 块容器 */
.block {
  margin-top: 32rpx;
}

/* 分割线 */
.line {
  height: 1rpx;
  width: 100%;
  background: linear-gradient(90deg, transparent, rgba(37, 99, 235, 0.1), transparent);
  margin: 16rpx 0;
}

/* 数据表格 - 玻璃态 */
.code_box {
  text-align: center;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15px);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  margin-top: 24rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(37, 99, 235, 0.08);
}

.code_box_title {
  color: #64748B;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  text-align: left;
}

.code_box_record {
  display: flex;
  padding: 16rpx 0;
}

.code_box_record_title {
  width: 25%;
  font-size: 26rpx;
  color: #475569;
  font-weight: 600;
  padding: 16rpx 8rpx;
}

.code_box_record_detail {
  width: 25%;
  font-size: 26rpx;
  color: #334155;
  padding: 16rpx 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code_box_record_detail input {
  background: rgba(255, 255, 255, 0.5);
  border: 2rpx solid rgba(37, 99, 235, 0.2);
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 26rpx;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.code_box_record_detail input:focus {
  border-color: #2563EB;
  box-shadow: 0 0 0 4rpx rgba(37, 99, 235, 0.1);
}

/* 按钮 */
.code_box_record_detail button {
  background: #EF4444;
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.2);
}

/* 弹窗 - 玻璃态 */
.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  padding: 48rpx;
  border-radius: 32rpx;
  width: 80%;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 32rpx;
}

.modal-input {
  margin-bottom: 24rpx;
  border: 2rpx solid rgba(37, 99, 235, 0.2);
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  width: 100%;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.5);
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-input:focus {
  border-color: #2563EB;
  box-shadow: 0 0 0 4rpx rgba(37, 99, 235, 0.1);
  background: rgba(255, 255, 255, 0.8);
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  margin-top: 32rpx;
}

.modal-actions button {
  min-width: 160rpx;
  height: 72rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-actions button:first-child {
  background: rgba(37, 99, 235, 0.1);
  color: #2563EB;
}

.modal-actions button:last-child {
  background: #2563EB;
  color: #FFFFFF;
}

/* AI助手相关样式 */
.notice-box {
  background: linear-gradient(135deg, rgba(255, 248, 230, 0.8) 0%, rgba(255, 243, 217, 0.8) 100%);
  backdrop-filter: blur(10px);
  border-left: 4rpx solid #F97316;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(249, 115, 22, 0.1);
}

.notice-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.75;
}

.notice-highlight {
  color: #EA580C;
  font-weight: 600;
}

.shortcut-box {
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(37, 99, 235, 0.1);
  border-radius: 20rpx;
  padding: 32rpx;
  margin: 24rpx 0;
}

.shortcut-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.shortcut-item:last-child {
  margin-bottom: 0;
}

.shortcut-label {
  font-size: 28rpx;
  color: #475569;
  width: 240rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.shortcut-key {
  font-size: 28rpx;
  color: #2563EB;
  font-weight: 600;
  background: rgba(37, 99, 235, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  white-space: nowrap;
  border: 2rpx solid rgba(37, 99, 235, 0.2);
}

.plugin-name-box {
  background: linear-gradient(135deg, rgba(37, 99, 235, 0.08) 0%, rgba(59, 130, 246, 0.08) 100%);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(37, 99, 235, 0.2);
  border-radius: 20rpx;
  padding: 24rpx;
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.plugin-name {
  font-size: 30rpx;
  color: #2563EB;
  font-weight: 600;
  flex: 1;
}

.copy-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(37, 99, 235, 0.15);
  border: 2rpx solid rgba(37, 99, 235, 0.3);
  border-radius: 16rpx;
  margin-left: 20rpx;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.copy-btn:active {
  background: rgba(37, 99, 235, 0.25);
  transform: scale(0.95);
}

.copy-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.copy-text {
  font-size: 26rpx;
  color: #2563EB;
  font-weight: 500;
}

.divider {
  height: 1rpx;
  width: 100%;
  background: linear-gradient(90deg, transparent, rgba(37, 99, 235, 0.1), transparent);
  margin: 48rpx 0;
}

.feature-section {
  margin-top: 32rpx;
}

.feature-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 32rpx;
}

.feature-list {
  padding-left: 0;
}

/* 功能卡片 - 玻璃态 */
.feature-item-with-examples {
  margin-bottom: 24rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(15px);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(37, 99, 235, 0.08);
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.feature-item-with-examples:last-child {
  margin-bottom: 0;
}

.feature-item-with-examples:active {
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0 12rpx 48rpx rgba(37, 99, 235, 0.12);
}

.feature-main {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(37, 99, 235, 0.1);
}

.feature-examples {
  padding-left: 0;
}

.feature-example-wrapper {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.feature-example-wrapper:active {
  background: rgba(255, 255, 255, 0.5);
}

.feature-example-text {
  flex: 1;
  font-size: 26rpx;
  color: #475569;
  line-height: 1.75;
  padding-right: 16rpx;
}

.feature-copy-btn {
  padding: 12rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
  background: rgba(37, 99, 235, 0.1);
}

.feature-copy-btn:active {
  background: rgba(37, 99, 235, 0.2);
}

.feature-copy-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.7;
}
