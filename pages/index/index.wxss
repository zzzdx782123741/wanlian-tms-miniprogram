/**
 * 首页样式 - 玻璃态设计系统
 * Index Page Styles - Glassmorphism Design System
 */

page {
  padding-top: 54rpx;
  background: linear-gradient(180deg, #F0F4FF 0%, #F8FAFC 100%);
  padding-bottom: 60rpx;
  min-height: 100vh;
}

.container {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", sans-serif;
  padding: 0 48rpx;
}

/* 标题区域 */
.title {
  font-weight: 700;
  color: #1E293B;
  font-size: 56rpx;
  margin-bottom: 24rpx;
  letter-spacing: -0.02em;
}

.top_tip {
  font-size: 28rpx;
  font-weight: 400;
  color: #475569;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.top-tip-item {
  display: inline-block;
  background: rgba(37, 99, 235, 0.1);
  color: #2563EB;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 功能列表 - 玻璃态卡片 */
.power {
  margin-top: 48rpx;
  width: 100%;
}

.power_info {
  display: flex;
  padding: 32rpx;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(37, 99, 235, 0.08);
  margin-bottom: 24rpx;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.power_info:active {
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 12rpx 48rpx rgba(37, 99, 235, 0.12);
  transform: translateY(-4rpx);
}

.power_info_text {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.power_info_text_title {
  margin-bottom: 12rpx;
  font-weight: 600;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  color: #1E293B;
}

.power_info_text_tag {
  margin-left: 16rpx;
  background: linear-gradient(135deg, #F97316, #FB923C);
  color: #FFFFFF;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(249, 115, 22, 0.2);
}

.power_info_text_tip {
  color: #64748B;
  font-size: 26rpx;
  line-height: 1.6;
  padding-right: 30rpx;
}

/* 箭头图标 */
.power_info_more,
.power_info_less,
.power_item_icon {
  width: 32rpx;
  height: 32rpx;
  transition: transform 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.power_info_more {
  transform: rotate(90deg);
}

.power_info_less {
  transform: rotate(270deg);
}

/* 子项 */
.power_item {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  margin-top: 16rpx;
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.power_item:active {
  background: rgba(255, 255, 255, 0.6);
  transform: scale(0.98);
}

.power_item_title {
  font-size: 28rpx;
  color: #334155;
  font-weight: 500;
}

.line {
  width: 90%;
  margin: 0 auto;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(37, 99, 235, 0.1), transparent);
}

/* 环境信息 */
.environment {
  color: #94A3B8;
  font-size: 24rpx;
  margin-top: 96rpx;
  text-align: center;
  padding: 0 48rpx;
}

/* 玻璃态装饰卡片 */
.decoration-card {
  position: fixed;
  border-radius: 50%;
  opacity: 0.5;
  pointer-events: none;
  z-index: 0;
}

.deco-1 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  right: -100rpx;
  background: radial-gradient(circle, rgba(37, 99, 235, 0.15), transparent);
  filter: blur(40px);
}

.deco-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 200rpx;
  left: -100rpx;
  background: radial-gradient(circle, rgba(249, 115, 22, 0.1), transparent);
  filter: blur(40px);
}

/* 功能标题（可选使用） */
.function_title {
  font-weight: 700;
  color: #1E293B;
  font-size: 40rpx;
  text-align: left;
  width: 100%;
  margin-top: 64rpx;
  margin-bottom: 32rpx;
  padding-left: 8rpx;
}

/* 示例容器 */
.examples_container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  align-items: center;
  margin-top: 48rpx;
}

.example_item {
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 32rpx;
  width: 100%;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(37, 99, 235, 0.08);
  transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
}

.example_item:active {
  background: rgba(255, 255, 255, 0.8);
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 48rpx rgba(37, 99, 235, 0.12);
}
