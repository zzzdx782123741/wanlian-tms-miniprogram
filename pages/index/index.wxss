/**
 * 首页样式 - 万联驿站TMS 现代化设计
 * 采用iOS风格的设计语言，注重细节和动画效果
 */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 120rpx;
}

/* 顶部装饰背景 */
.header-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 500rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 50% 50% / 0 0 100rpx 100rpx;
  z-index: 0;
}

/* 用户区域 */
.user-section {
  position: relative;
  z-index: 1;
  padding: 40rpx 32rpx 0;
}

/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.15);
}

/* 头像容器 */
.avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.avatar-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(250, 112, 154, 0.3);
}

/* 用户详情 */
.user-details {
  flex: 1;
}

.greeting {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 12rpx;
}

.role-badge {
  display: inline-block;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

/* 通知按钮 */
.notification-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 20rpx;
}

.notification-btn .icon {
  font-size: 36rpx;
}

/* 统计行 */
.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(180deg, transparent, #E2E8F0, transparent);
}

/* 菜单区域 */
.menu-section {
  position: relative;
  z-index: 1;
  padding: 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #718096;
}

/* 菜单网格 */
.menu-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 菜单卡片 */
.menu-card {
  position: relative;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.menu-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.menu-card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.15;
}

.menu-content-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.menu-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-icon {
  font-size: 52rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.menu-text {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #718096;
  line-height: 1.5;
}

.menu-arrow {
  font-size: 48rpx;
  color: #CBD5E0;
  font-weight: 300;
  margin-left: 16rpx;
}

/* 快捷操作 */
.quick-actions {
  position: relative;
  z-index: 1;
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 28rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.dev-mode-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.25);
}

.dev-mode-btn:active {
  box-shadow: 0 4rpx 12rpx rgba(240, 147, 251, 0.3);
}

.action-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 底部 */
.footer {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 48rpx 32rpx 32rpx;
}

.version {
  font-size: 22rpx;
  color: #A0AEC0;
  font-weight: 500;
}

/* 角色切换弹窗（开发模式） */
.role-switcher-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.role-switcher-content {
  width: 640rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx 32rpx 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.role-switcher-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.role-switcher-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 12rpx;
}

.role-switcher-subtitle {
  display: block;
  font-size: 24rpx;
  color: #f5576c;
  font-weight: 500;
}

.role-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.role-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #F7FAFC;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.role-item-active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: #667eea;
}

.role-item:active {
  transform: scale(0.98);
}

.role-item-icon {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 20rpx;
  font-size: 44rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.role-item-info {
  flex: 1;
}

.role-item-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 6rpx;
}

.role-item-desc {
  font-size: 22rpx;
  color: #718096;
}

.role-item-check {
  font-size: 36rpx;
  color: #667eea;
  font-weight: 700;
}

.role-switcher-close {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.role-switcher-close:active {
  transform: scale(0.98);
}
