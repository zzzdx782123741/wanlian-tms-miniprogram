/**
 * 首页样式 - 万联驿站TMS 司机极简版
 * 注重：清晰、大字、高对比度
 */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 120rpx;
}

/* 顶部装饰背景 - 移除蓝色背景，改为简洁白色 */
.header-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, #F5F7FA 0%, #FFFFFF 100%);
  z-index: 0;
}

/* 菜单区域 */
.menu-section {
  position: relative;
  z-index: 1;
  padding: var(--spacing-md);
  margin-top: 40rpx;
}

.section-header {
  margin-bottom: var(--spacing-md);
  padding-left: var(--spacing-xs);
  border-left: 8rpx solid #667eea;
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: #1A202C;
  margin-bottom: 4rpx;
  padding-left: var(--spacing-sm);
}

.section-subtitle {
  font-size: var(--font-size-sm);
  color: #718096;
  padding-left: var(--spacing-sm);
}

/* 菜单网格 */
.menu-grid {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

/* 菜单卡片 - 实体 */
.menu-card {
  position: relative;
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  background: var(--color-bg-card);
  border: 1px solid var(--color-border-glass);
}

.menu-card:active {
  background: var(--color-bg-card-hover);
  transform: scale(0.99);
}

.menu-card-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.1; /* 降低背景色透明度，保持清爽 */
}

.menu-content-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  padding: 40rpx var(--spacing-lg); /* 加大卡片内边距 */
}

.menu-icon-wrapper {
  width: 112rpx; /* 加大图标区域 */
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0F5FF;
  border-radius: var(--radius-md);
  margin-right: var(--spacing-md);
}

.menu-icon {
  font-size: 64rpx; /* 加大图标 */
}

.menu-text {
  flex: 1;
}

.menu-title {
  font-size: 40rpx; /* 加大标题 */
  font-weight: var(--font-weight-bold);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
}

.menu-desc {
  font-size: var(--font-size-base);
  color: var(--color-text-secondary);
}

.menu-arrow {
  font-size: 56rpx;
  color: var(--color-text-tertiary);
  margin-left: var(--spacing-md);
}

/* 快捷操作 */
.quick-actions {
  position: relative;
  z-index: 1;
  padding: 0 var(--spacing-md);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  margin-top: var(--spacing-lg);
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  color: var(--color-text-primary);
  padding: 32rpx; /* 加大按钮高度 */
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--color-border-glass);
}

.action-btn:active {
  background: var(--color-bg-card-hover);
}

.dev-mode-btn {
  background: #FFF0F6;
  color: #C41D7F;
  border-color: #FFADD2;
}

.action-icon {
  font-size: 40rpx;
  margin-right: var(--spacing-sm);
}

.action-text {
  font-size: 32rpx;
  font-weight: var(--font-weight-semibold);
}

/* 底部 */
.footer {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-md);
}

.version {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
}

/* 角色切换弹窗 */
.role-switcher-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.role-switcher-content {
  width: 640rpx;
  background: #fff;
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-xl);
}

.role-switcher-header {
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.role-switcher-title {
  display: block;
  font-size: 44rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
}

.role-switcher-subtitle {
  display: block;
  font-size: var(--font-size-base);
  color: var(--color-error);
}

.role-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.role-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md);
  background: var(--color-bg-page);
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
}

.role-item-active {
  background: #E6F7FF;
  border-color: var(--color-primary);
}

.role-item-icon {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: var(--radius-md);
  font-size: 48rpx;
  margin-right: var(--spacing-md);
  border: 1px solid var(--color-border-glass);
}

.role-item-info {
  flex: 1;
}

.role-item-name {
  font-size: 36rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-primary);
}

.role-item-desc {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.role-item-check {
  font-size: 44rpx;
  color: var(--color-primary);
  font-weight: bold;
}

.role-switcher-close {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  background: var(--color-primary);
  color: #fff;
  border-radius: var(--radius-md);
  font-size: 32rpx;
  font-weight: var(--font-weight-bold);
}
