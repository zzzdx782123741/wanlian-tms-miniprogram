/**
 * 司机：我的页面样式
 */

/* 页面容器 */
.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-profile-card {
  background: #fff;
  padding: 40rpx 32rpx;
  margin: 32rpx 32rpx 0;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #F0F5FF;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-right: 32rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 12rpx;
}

.user-role {
  display: inline-block;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* 统计容器 */
.stats-container {
  display: flex;
  align-items: center;
  background: #fff;
  margin: 32rpx;
  padding: 40rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #718096;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #E2E8F0;
}

/* 功能列表 */
.function-list {
  margin: 0 32rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item:active {
  background: #f9f9f9;
}

.function-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.function-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3748;
}

.function-arrow {
  font-size: 40rpx;
  color: #c0c4cc;
}
