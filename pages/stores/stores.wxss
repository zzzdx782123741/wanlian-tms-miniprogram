/**
 * 门店管理页面样式
 */

.page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 顶部标题栏 */
.header {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 40rpx 32rpx 60rpx;
  border-radius: 0 0 50% 50% / 0 0 80rpx 80rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 搜索和筛选 */
.search-bar {
  padding: 0 32rpx;
  margin-top: -40rpx;
}

.search-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.filter-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3748;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.arrow {
  font-size: 20rpx;
  color: #A0AEC0;
}

.search-input {
  flex: 1;
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.search-btn {
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
  font-size: 28rpx;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(240, 147, 251, 0.3);
}

.search-btn::after {
  border: none;
}

/* 列表容器 */
.list-container {
  padding: 0 32rpx;
}

/* 门店卡片 */
.store-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.store-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #E2E8F0;
}

.store-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
}

.store-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.store-status.status-pending_audit {
  background: #FEF3C7;
  color: #92400E;
}

.store-status.status-normal {
  background: #D1FAE5;
  color: #065F46;
}

.store-status.status-suspended {
  background: #FED7D7;
  color: #742A2A;
}

/* 门店信息 */
.store-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #718096;
  min-width: 160rpx;
}

.value {
  color: #2D3748;
  flex: 1;
}

/* 操作按钮行 */
.action-row {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 16rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: #f093fb;
  color: #fff;
}

.action-btn.success {
  background: #10B981;
  color: #fff;
}

.action-btn.warning {
  background: #F59E0B;
  color: #fff;
}

.action-btn.danger {
  background: #EF4444;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #A0AEC0;
}
