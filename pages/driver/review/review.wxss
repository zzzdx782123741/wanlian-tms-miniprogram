/**
 * 门店评价页面样式
 */

.review-page {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E2E8F0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #A0AEC0;
}

/* 顶部提示 */
.review-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 80rpx;
  text-align: center;
  border-radius: 0 0 50% 50% / 0 0 40rpx 40rpx;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 评价表单 */
.review-form {
  margin-top: -40rpx;
  padding: 0 32rpx;
}

/* 门店信息卡片 */
.store-info-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.store-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 16rpx;
}

.store-address {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #718096;
}

.address-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 评分区域 */
.rating-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.rating-item {
  display: flex;
  flex-direction: column;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #E2E8F0;
}

.rating-item:last-child {
  border-bottom: none;
}

.rating-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
}

.rating-stars {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.star {
  font-size: 56rpx;
  color: #E2E8F0;
  transition: all 0.2s ease;
  position: relative;
}

.star-icon {
  display: block;
}

/* 激活状态的星星 */
.star.active {
  color: #F59E0B;
}

/* 半星效果 */
.star.half::before {
  content: '★';
  position: absolute;
  left: 0;
  width: 50%;
  overflow: hidden;
  color: #F59E0B;
  z-index: 1;
}

.rating-text {
  font-size: 24rpx;
  color: #F59E0B;
  font-weight: 600;
}

/* 标签区域 */
.tags-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 16rpx 24rpx;
  background: #F7FAFC;
  border: 2rpx solid #E2E8F0;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #718096;
  transition: all 0.2s ease;
}

.tag-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: #fff;
}

/* 评价内容区域 */
.comment-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
  margin-right: 8rpx;
}

.title-hint {
  font-size: 24rpx;
  color: #A0AEC0;
}

.comment-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #F7FAFC;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3748;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #A0AEC0;
  margin-top: 12rpx;
}

/* 匿名选项 */
.anonymous-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.anonymous-option {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #E2E8F0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.check-icon {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
}

.anonymous-label {
  font-size: 28rpx;
  color: #2D3748;
}

.anonymous-hint {
  font-size: 24rpx;
  color: #A0AEC0;
  margin-top: 12rpx;
  padding-left: 56rpx;
}

/* 提交区域 */
.submit-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 32rpx;
}

.submit-btn {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 32rpx;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}

.submit-btn .btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.skip-btn {
  background: #fff;
  color: #718096;
  font-size: 28rpx;
  padding: 28rpx;
  border-radius: 16rpx;
  border: 2rpx solid #E2E8F0;
}

.skip-btn::after {
  border: none;
}
